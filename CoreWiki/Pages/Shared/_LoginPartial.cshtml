@using Microsoft.AspNetCore.Identity
@using CoreWiki.Data.Security
@inject SignInManager<CoreWikiUser> SignInManager
@inject UserManager<CoreWikiUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
		<li>
			<a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)</a>
		</li>
		<li>
			<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
				<button type="submit" class="btn btn-dark btn-outline-secondary my-2 my-sm-0">@Localizer["Logout"]</button>
			</form>
		</li>
}
else
{
		<li class="nav-item text-nowrap"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a></li>
		<li class="nav-item text-nowrap"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a></li>
}
